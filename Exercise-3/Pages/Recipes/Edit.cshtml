@page
@model Exercise_3.Pages.Recipes.EditModel
@{
}
<h1>Update</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input hidden asp-for="Recipe.Id" class="form-control"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Title"  class="control-label"></label>
                <input asp-for="Recipe.Title" class="form-control" />
                <span asp-validation-for="Recipe.Title" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Ingredients" class="control-label"></label>
                <textarea asp-for="Recipe.Ingredients" class="form-control" rows="4" cols="60" minlength="10" placeholder = "Enter different ingredients on seperate lines."></textarea> 
                <span asp-validation-for="Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Instructions" class="control-label"></label>
                <textarea asp-for="Recipe.Instructions" class="form-control" rows="4" cols="50" minlength="10" placeholder = "Enter different instructions on seperate lines."></textarea>
                <span asp-validation-for="Recipe.Instructions" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Recipe.Categories" class="control-label"></label>
                <select asp-for="Recipe.Categories" 
                asp-items="@(new SelectList(Model.Recipe.Categories))"  
                class="form-control" multiple></select>
                <span asp-validation-for="Recipe.Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to Recipes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}