@page
@model Exercise_3.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "Index";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<p>
    <a asp-page="Create">Create New</a>
</p>
<div>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Ingredients</th>
            <th>Instructions</th>
            <th>Categories</th>
            <th>Actions</th>
        </tr>
        @foreach(Recipe recipe in Model.Recipes)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>@recipe.Ingredients.Substring(0,@recipe.Ingredients.Length%10+4)...</td>
                <td>@recipe.Instructions.Substring(0,@recipe.Instructions.Length%10+4)...</td>
                <td>@String.Join(", ",recipe.Categories)...</td>
                <td>
                <a class="btn btn-lg" 
                    asp-page="Detail" 
                    asp-route-id="@recipe.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
                <a class="btn btn-lg" 
                    asp-page="Edit" 
                    asp-route-id="@recipe.Id">
                    <i class="glyphicon glyphicon-pencil"></i>
                </a>
                <a class="btn btn-lg" 
                    asp-page="Delete" 
                    asp-route-id="@recipe.Id">
                    <i class="glyphicon glyphicon-remove"></i>
                </a>
            </td>
            </tr>
        }
    </table>
</div>