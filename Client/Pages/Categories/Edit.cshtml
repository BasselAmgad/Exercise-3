@page
@model Exercise3.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h3>What will the new category title of <b>@Model.Category</b> be?</h3>

<div>
    <form method="post">
        <input hidden asp-for="Category" class="form-control" />
        <div class="form-floating mb-3">
            <label asp-for="NewCategory"></label>
            <input asp-for=@Model.NewCategory id="newCategory" class="form-control" min="5" />
            <span class="text-danger"></span>
        </div>
        <br />
        <div class="form-floating mb-3">
            <input type="submit" value="Update" class="btn btn-danger" />
        </div>

    </form>
    <a asp-page="./Index">Back to List</a>
</div>